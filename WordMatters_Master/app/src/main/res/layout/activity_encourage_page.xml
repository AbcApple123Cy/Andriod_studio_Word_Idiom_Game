<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundv2"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textGood"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="#E83C427E"
        android:fontFamily="@font/finger_paint"
        android:text="Congratulations! (๑•̀ㅂ•́)و✧ \n Good Job! (๑•̀ω•́)ノKeep Going!"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textScore"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#E83C427E"
        android:fontFamily="@font/finger_paint"
        android:gravity="center"
        android:text="Score"
        android:textColor="#FFF"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/cutie"
        android:layout_width="330dp"
        android:layout_height="219dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/encourage" />

    <Button
        android:id="@+id/Answer"
        android:layout_width="355dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/bgbtn"
        android:fontFamily="@font/finger_paint"
        android:paddingBottom="10dp"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="@color/colorPurple"
        android:textSize="28sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="355dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/bgbtn"
        android:fontFamily="@font/finger_paint"
        android:includeFontPadding="false"
        android:paddingBottom="10dp"
        android:text="Back to Home (☍﹏⁰)"
        android:textAllCaps="false"
        android:textColor="@color/colorPurple"
        android:textSize="30sp"
        android:textStyle="bold" />

</LinearLayout>