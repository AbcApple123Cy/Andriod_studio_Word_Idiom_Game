<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundv2"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageButton
        android:id="@+id/btnHome"
        android:layout_width="80dp"
        android:layout_height="77dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="-50dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/homepage" />

    <TextView
        android:id="@+id/textScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/finger_paint"
        android:text="Score"
        android:textColor="#FFF"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textWarn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/finger_paint"
        android:gravity="center"
        android:text="Be careful, each tip requires 30 scores!!! \n Skip need 50 scores!!!"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/bgquestion"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textGood"
            android:layout_width="280dp"
            android:layout_height="138dp"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/finger_paint"
            android:text="Guess Animals in English language"
            android:textAlignment="center"
            android:textColor="#332FA2"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeTextType="uniform" />


    </LinearLayout>

    <EditText
        android:id="@+id/editText"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/bgpurple"
        android:clickable="false"
        android:focusable="false"
        android:fontFamily="@font/finger_paint"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="#332FA2"
        android:textSize="32sp"
        android:textStyle="bold"
        app:autoSizeTextType="uniform" />


    <ImageButton
        android:id="@+id/btnTips"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginLeft="05dp"
        android:layout_marginTop="-75dp"
        android:background="@drawable/tipsbtn"
        android:text="Tips" />

    <ImageButton
        android:id="@+id/btnSkip"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_marginLeft="325dp"
        android:layout_marginTop="-52dp"
        android:background="@drawable/skiptbtn"
        android:text="Tips" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/Answer"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="05dp"
            android:layout_marginRight="28dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/finger_paint"
            android:text="Answer"
            android:textColor="#FFF"
            android:textSize="30sp"
            android:textStyle="bold"
            />


        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginLeft="150dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/deletebtn"
            android:text="Delete" />
    </LinearLayout>


    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/FlexboxLayout"
        android:layout_width="389dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="-10dp"
        android:layout_marginRight="24dp"
        android:orientation="horizontal"
        app:flexDirection="row"
        app:flexWrap="wrap"
        app:layout_flexBasisPercent="70%"
        app:layout_order="1">



    </com.google.android.flexbox.FlexboxLayout>


</LinearLayout>